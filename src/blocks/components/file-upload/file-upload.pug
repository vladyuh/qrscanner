mixin input-fileUpload(data)
    .custom-file-container(data-upload-id=data.id, data-glide-el="track")
        label.custom-file-container__label
            !=data.label
            a.custom-file-container__image-clear(href='javascript:void(0)' title='Clear Image') &times;
        label.custom-file-container__custom-file
            input.custom-file-container__custom-file__custom-file-input(type='file' accept='*' required name=data.id multiple='' aria-label='Choose File')
            input(type='hidden' name='MAX_FILE_SIZE' value='10485760')
            span.custom-file-container__custom-file__custom-file-control
        ul.custom-file-container__image-preview.glide__slides