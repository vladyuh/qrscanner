//- select
mixin selectCustom(data)
  .select
    if data.label 
      span.label=data.label
    .select__value
      .value= data.placeholder
      .select__dropdown(data-title=data.label)
        each item in data.data
          label
            span=item
            if (data.required)
              input(type="radio", name=data.name, value=item, required)
            else
              input(type="radio", name=data.name, value=item)
