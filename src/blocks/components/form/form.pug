include ../../../views/helpers/mixins.pug
//- input
mixin input(data)
  .input(class="input-"+(data.type ? data.type : '')+"")
    if data.label 
      span.label=data.label
    if data.required
      input(type=data.type, name=data.name, placeholder=data.placeholder, required)
    else
      input(type=data.type, name=data.name, placeholder=data.placeholder)
//- input with icon
mixin input-icon(data)
  .input(class="input-"+(data.type ? data.type : '')+" input-icon")
    if data.label 
      span.label=data.label
    .input-icon__wrap
      span.icon: +icons(data.icon,'20')
      if data.required
        input(type=data.type, name=data.name, placeholder=data.placeholder, required)
      else
        input(type=data.type, name=data.name, placeholder=data.placeholder)
