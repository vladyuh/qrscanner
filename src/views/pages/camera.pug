extends ../layouts/file
include ../helpers/mixins
include ../../blocks/components/breadcrumbs/breadcrumbs.pug
include ../../blocks/components/form/form.pug
include ../../blocks/components/file-upload/file-upload.pug
include ../../blocks/components/checkbox/checkbox.pug
include ../../blocks/components/headers/headers.pug


block variables
    - const title = "Главная"
block content
    section.reader
        .reader__preview
            #reader(style="background-image:url(data:image/svg+xml;base64,)")
        .results
            .results__title
                +icons('#ic_close',24)
                .section-h3 Результаты
            .tabs
                .tabs__tab.is-active(data-tab="1") Текущий
                .tabs__tab(data-tab="2") История
            .tab-content.is-active.results__text(data-tab="1") Ничего не найдено...
            .tab-content.results__history(data-tab="2")
        .reader__input.btn.btn-round
            +icons('#ic_upload',24)
            span Выбрать файл
            input(type="file" id="qr-input-file" accept="image/*")
block scripts
    script(src="js/main.js")
    script(src="js/camera.js")